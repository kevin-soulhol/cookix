{
  "name": "Cookix",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "npx remix build",
    "dev": "remix dev",
    "start": "node server.js",
    "seed": "node prisma/seed.js",
    "scrap:run": "docker compose exec scraper node /app/index.js",
    "scrap:season": "docker compose exec scraper node /app/seasonality-updater.js",
    "scrap:reset": "docker compose exec scraper node /app/reset-seasonality.js",
    "scrap:chrono": "docker compose exec scraper node /app/chronodrive.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "db:setup": "npm run prisma:generate && npm run prisma:migrate",
    "db:add": "docker compose exec -ti app node prisma/add_recipes.js",
    "docker:start": "docker compose down && docker compose up --build",
    "dev:logs": "docker compose logs -f",
    "studio": "docker compose exec app npx prisma studio",
    "migrate": "docker compose exec app ./prisma-migrate.sh",
    "migrate:dev": "docker compose exec app npx prisma migrate dev --name",
    "migrate:reset": "docker compose exec app npx prisma migrate reset",
    "migrate:deploy": "docker compose exec app npx prisma migrate deploy",
    "migrate:generate": "docker compose exec app npx prisma generate",
    "migrate:export": "docker compose exec db mysqldump -u root -p cookix Recipe >/tmp/dump.sql",
    "test": "playwright test --ui"
  },
  "dependencies": {
    "@google/genai": "^1.4.0",
    "@prisma/client": "^6.6.0",
    "@remix-run/node": "^2.16.1",
    "@remix-run/react": "^2.16.1",
    "@remix-run/serve": "^2.16.1",
    "bcryptjs": "^3.0.2",
    "browser-image-compression": "^2.0.2",
    "isbot": "^4.1.0",
    "playwright-core": "^1.44.0",
    "prisma": "^6.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-swipeable": "^7.0.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@remix-run/dev": "^2.16.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^22.13.10",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "playwright": "^1.44.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.1.6",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
